source 'https://rubygems.org'

# Base
gem 'rails', '3.2.6'
gem 'mysql2'
gem 'json'

# ActiveRecord
gem 'kaminari'

# Javascript && CSS
gem 'jquery-rails'
gem 'twitter-bootstrap-rails'

# Decorator Pattern
gem 'draper'

# Authorization
gem 'devise'
gem 'cancan'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :test, :development do
  gem 'guard-test'
  gem 'growl'
end

group :test do
	gem 'simplecov'
  gem 'ruby-prof'
end

