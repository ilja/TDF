<%= content_for(:title, "Renners") %>

<%= render :partial => "riders/find_form" %>

<%= paginate @riders %>

<%= render :partial => "riders/list", :locals => { :riders => @riders, :teams => false } %>

<%= paginate @riders %>

<% if can? :create, Rider %>
  <div class="well">
    <%= link_to "Nieuwe renner", new_rider_path, :class => "btn" %>
    <% if rider_params[:name].present? || rider_params[:team_id].present? %>
      <%= link_to "Wijzig renners", edit_index_riders_path(rider_params), :class => "btn" %>
    <% end %>
  </div>
<% end %>
