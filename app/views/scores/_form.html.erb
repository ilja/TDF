<%= form_for [@stage, score], html: { class: 'form-inline' } do |form| %>

  <%= error_messages_for(form.object) %>
  <div class="form-group">
    <%= form.label :number %>
    <%= form.number_field :number, :class => 'form-control', min: Rider.minimum(:number), max: Rider.maximum(:number), step: 1 %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.select :category, score_category_options, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :points %>
    <%= form.number_field :points, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Opslaan', class: 'btn btn-primary' %>
  </div>

<% end %>
