<table class="table table-condensed">
  <thead>
  <tr>
    <th width="5%"></th>
    <th width="75%">Renner</th>
    <th width="10%">Punten</th>
		<th width="10%"></th>
  </tr>
  </thead>
  <tbody>
	<% i = 0 %>
  <% @sorted_riders.each do |sorted_rider| %>
    <% stage_points = sorted_rider[0] %>
    <% rider = sorted_rider[1] %>
    <tr>
			<td><%= i += 1 %></td>
      <td><%= rider.link_to %></td>
			<td class="center"><%= stage_points %></td>
			<td class="center"><%= rider.team_badge %></td>
    </tr>
  <% end %>
  </tbody>
</table>