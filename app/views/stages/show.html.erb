<%= content_for(:title, "Etappe #{@stage.number} #{@stage.name}") %>

<%= render :partial => "navigation" %>

<%= render :partial => "stage_information" %>

<div class="fb-like" data-href="<%= stage_url(@stage) %>" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>

<% if can? :edit, Team %>
<div class="well">
  <%= link_to "Wijzig", edit_stage_path(@stage), :class => "btn" %>
</div>
<% end %>

<div class="row">
	<div class="span6">
		<h2 id="player_ranking">De ploegen</h2>
		<%= render :partial => "shared/player_ranking", :locals => {:players => @sorted_players, :stage => @stage} %>
	</div>
	<div class="span6">
		<h2 id="rider_ranking">De renners</h2>
		<%= render :partial => "shared/rider_ranking", :locals => {:riders => @sorted_riders, :stage => @stage} %>
	</div>
</div>

