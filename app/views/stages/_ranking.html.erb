<table class="table table-condensed">
  <thead>
  <tr>
    <th></th>
    <th>Team</th>
    <th>Punten</th>
  </tr>
  </thead>
  <tbody>
	<% i = 0 %>
  <% @sorted_players.each do |sorted_player| %>
    <% stage_points = sorted_player[0] %>
    <% player = sorted_player[1] %>
    <tr>
			<td><%= i += 1 %></td>
      <td><%= player.team_name %></td>
			<td><%= stage_points %></td>
    </tr>
  <% end %>
  </tbody>
</table>