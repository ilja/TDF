<h1>Deelnemers</h1>

<%= paginate @players %>
<table class="table">
  <thead>
  <tr>
    <th>Team</th>
    <th>Manager</th>
    <th class="center">Renners</th>
    <th class="center">Punten</th>
    <th>Uitgegeven</th>
		<% if can? :edit, Player %>
			<th class="center">Admin</th>
		<% end %>
  </tr>
  </thead>
  <tbody>
  <% @players.each do |p| %>
  <tr>
    <td><%= p.link_to %> <%= can? :edit, Player %></td>
    <td><%= p.name_with_badge %></td>
    <td class="center">
      <%= p.riders_count_badge %>
    </td>
    <td class="center"><%= p.points %></td>
    <td><%= p.expenses %></td>
		<% if can? :edit, Player %>
			<td class="center"><%= bool_icon p.admin? %></td>
		<% end %>
  </tr>
  <% end %>
  </tbody>
</table>

<% if can? :create, Player %>
	<div class="well">
		<%= link_to "Nieuwe deelnemer", new_player_path, :class => "btn" %>
	</div>
<% end %>