<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th width="5%"></th>
    <th width="75%">Renner</th>
    <th width="10%">Punten</th>
		<th width="10%"></th>
  </tr>
  </thead>
  <tbody>
	<% i = 0 %>
  <% riders.each do |rider| %>
    <tr>
			<td><%= i += 1 %></td>
      <td><%= rider.link_to %></td>
			<td class="center"><%= rider.sorted_points  || rider.points %></td>
			<td class="center"><%= rider.team_badge(@player) %></td>
    </tr>
  <% end %>
  </tbody>
</table>